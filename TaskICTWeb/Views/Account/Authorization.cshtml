@{
    ViewData["Title"] = "Авторизация";
}

<div style="width: 300px; margin: 200px auto;">
    <h1 style="text-align: center; margin-bottom: 40px;">Авторизация</h1>

    @if (ViewBag.Error != null)
    {
        <div style="margin-bottom: 15px; text-align: center;">@ViewBag.Error</div>
    }

    <form asp-action="Authorization" method="post" style="display: flex; flex-direction: column;">
        <label style="margin-bottom: 5px;">Введите email:</label>
        <input type="email" name="email" style="margin-bottom: 15px;" />

        <label style="margin-bottom: 5px;">Введите пароль:</label>
        <input type="password" name="password" style="margin-bottom: 20px;" />

        <div style="display: flex; gap: 10px;">
            <button type="submit" name="action" value="authorization" style="flex: 1;">Войти</button>
            <button type="submit" name="action" value="registration" style="flex: 1;">Зарегистрироваться</button>
        </div>
    </form>

    <div style="margin-top: 15px; text-align: center;">
        <a href="/Main/PasswordUpdate">Восстановить пароль</a>
    </div>
</div>